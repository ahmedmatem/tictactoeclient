@model TicTacToe.Client.Models.GameInfoDataModel

<span class="@if ((int)Model.State == 1) {<text>playOn blink,me</text>}">@Model.FirstPlayerName</span> - 
<span class="@if ((int)Model.State == 2) {<text>playOn blink,me</text>}">@Model.SecondPlayerName</span>

<table class="board">
    <tbody>
        <tr>
            <td id="1,1,@Model.Id"></td>
            <td id="1,2,@Model.Id"></td>
            <td id="1,3,@Model.Id"></td>
        </tr>
        <tr>
            <td id="2,1,@Model.Id"></td>
            <td id="2,2,@Model.Id"></td>
            <td id="2,3,@Model.Id"></td>
        </tr>
        <tr>
            <td id="3,1,@Model.Id"></td>
            <td id="3,2,@Model.Id"></td>
            <td id="3,3,@Model.Id"></td>
        </tr>
    </tbody>
</table>
<button id="@Model.Id,playButton" type="button" class="btn btn-default disabled">Play</button>